<Alloy>
	<Window class="container" id="profile" onOpen="setUserData">
		<View class="innerContainer" layout="vertical">
			<View id="topBar" layout="horizontal">
				<View class="topButton" onClick="discoverButton">
					<ImageView image="/images/icons/backward-arrow.png" id="backButton"></ImageView>
				</View>
				<Label id="pageHeader" text="Profile"></Label>
				<View class="topButton">
					<ImageView imageHidden="/images/icons/add-symbol.png" id="addTaskButton"></ImageView>
				</View>
			</View>
			<ScrollView layout="vertical">
				<View id="profileView" layout="horizontal">
					<View id="profileImageView" layout="vertical">
						<ImageView id="profileImage" ></ImageView>
					</View>
					<View id="profileDescView" layout="horizontal">
						<Label class="white" id="name"></Label>
						<Label class="white" id="age"></Label>
						<Label class="white" id="city"></Label>
					</View>
				</View>
				<Label class="teal" id="interest">Interesser</Label>
				<View layout="horizontal">
					<View class="checkboxView" layout="vertical">
						<Switch title="Musik" class="checkbox"></Switch>
						<Switch title="HÃ¥ndarbejde" class="checkbox"></Switch>
						<Switch title="Underholdning" class="checkbox"></Switch>
						<Switch title="Dyr" class="checkbox"></Switch>
					</View>
					<View class="checkboxView" layout="vertical">
						<Switch title="Havearbejde" class="checkbox"></Switch>
						<Switch title="Socialt" class="checkbox"></Switch>
						<Switch title="Madlavning" class="checkbox"></Switch>
						<Switch title="Natur" class="checkbox"></Switch>
					</View>
					<View class="checkboxView" layout="vertical">
						<Switch title="Sport" class="checkbox"></Switch>
						<Switch title="Underholdning" class="checkbox"></Switch>
						<Switch title="Underholdning" class="checkbox"></Switch>
						<Switch title="Underholdning" class="checkbox"></Switch>
					</View>
				</View>
			</ScrollView>
		</View>
		<View layout="horizontal" id="nav">
			<View class="navButton" id="discoverButton" onClick="discoverButton">
				<ImageView image="/images/icons/earth-globe-dark.png" class="navButtonImage"></ImageView>
				<Label class="navText">Opdag</Label>
			</View>
			<View class="navButton" id="tasksButton" onClick="tasksButton">
				<ImageView image="/images/icons/completed-tasks-dark.png" class="navButtonImage"></ImageView>
				<Label class="navText">Tilmeldte Opgaver</Label>
			</View>
			<View class="navButton" id="profileButton" onClick="profileButton">
				<ImageView image="/images/icons/profile-light.png" class="navButtonImage active"></ImageView>
				<Label class="navText active">Profil</Label>
			</View>
			<View class="navButton" id="settingsButton" onClick="settingsButton">
				<ImageView image="/images/icons/settings-dark.png" class="navButtonImage"></ImageView>
				<Label class="navText">Indstillinger</Label>
			</View>
		</View>
	</Window>
</Alloy>